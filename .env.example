# Example environment variables file
# Copy this file to .env and fill in your actual values

# Application password for access control
APP_PASSWORD=your_secure_password_here

# Google Maps API Key (optional - for automatic mileage calculation)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Make sure to enable the Distance Matrix API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Database path (optional - defaults to data/trailer_moves.db)
DATABASE_PATH=data/trailer_moves.db

# Default rate per mile (optional - defaults to 2.10)
DEFAULT_RATE=2.10

# Default factor fee percentage (optional - defaults to 0.03)
DEFAULT_FACTOR_FEE=0.03